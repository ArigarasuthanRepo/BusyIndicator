<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.silverforge.busyindicator.MultiLoaderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/multiLaunchButton"
            android:text="@string/launch"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.silverforge.controls.BusyIndicator
            android:id="@+id/finiteMultiBusyIndicator1"

            app:smallpoint_color="@color/multi1_smallpoint"
            app:indicator_alpha="180"
            app:background_is_visible="true"
            app:background_color="@color/multi_background"
            app:background_shape="circle"

            app:infinite="false"
            app:stroke_width_multiplier="4"
            app:load_points_are_visible="false"
            app:percentage_is_visible="false"

            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />

        <com.silverforge.controls.BusyIndicator
            android:id="@+id/finiteMultiBusyIndicator2"

            app:smallpoint_color="@color/multi2_smallpoint"
            app:indicator_alpha="180"

            app:infinite="false"
            app:stroke_width_multiplier="5"
            app:load_points_are_visible="false"
            app:percentage_is_visible="false"

            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="250dp"
            />

        <com.silverforge.controls.BusyIndicator
            android:id="@+id/finiteMultiBusyIndicator3"

            app:smallpoint_color="@color/multi3_smallpoint"
            app:indicator_alpha="180"

            app:infinite="false"
            app:stroke_width_multiplier="6"
            app:load_points_are_visible="false"
            app:percentage_is_visible="false"

            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/loadingStatusText"
            android:text="@string/loading"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</FrameLayout>
